<%- include('partials/header') %>

<section class="banner">
    <div class="container">
        <div class="row">
            <div class="col-xl-12">
                <div class="banner-text">
                    <h1>Login</h1>
                </div>
            </div>
        </div>

        <div class="row justify-content-center">
            <div class="col-xl-6">
                <%- include("./partials/message"); %>
                <form class="card-body card" action="/login" method="POST">
                    <div class="form-group">
                        <label for="email">Email</label>
                        <input
                            type="email"
                            id="email"
                            name="email"
                            class="form-control"
                            placeholder="Enter Email"
                        />
                    </div>
                    <div class="form-group">
                        <label for="password">Password</label>
                        <input
                            type="password"
                            id="password"
                            name="password"
                            class="form-control"
                            placeholder="Enter Password"
                        />
                    </div>
                    <button type="submit" class="btn btn-primary btn-block">
                        Login
                    </button>
                    <span class="mt-3">No Account? <a href="/register">Register</a></span>
                </form>
            </div>
        </div>
    </div>
</section>

<%- include('partials/footer') %>